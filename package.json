{
  "name": "angular-webpack-starter",
  "version": "0.0.1",
  "description": "Angular 1.x application with Webpack",
  "main": "index.html",
  "scripts": {
    "clean": "npm cache clean && rimraf node_modules doc coverage dist",
    "clean:dist": "rimraf dist",
    "build:dev": "webpack --progress --profile --colors --display-error-details --display-cached",
    "build:prod": "webpack --config webpack.prod.config.js --progress --profile --colors --display-error-details --display-cached",
    "server:dev": "webpack-dev-server --inline --progress --profile --colors --display-error-details --display-cached  --content-base src/",
    "server:prod": "http-server dist --cors",
    "server": "npm run server:dev",
    "start": "npm run server:dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oryam/angular-webpack-starter.git"
  },
  "keywords": [
    "angularjs",
    "webpack",
    "starter",
    "demo"
  ],
  "author": "Oryam",
  "bugs": {
    "url": "https://github.com/oryam/angular-webpack-starter/issues"
  },
  "homepage": "https://github.com/oryam/angular-webpack-starter#readme",
  "devDependencies": {
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "compression-webpack-plugin": "^0.3.0",
    "copy-webpack-plugin": "^1.1.1",
    "html-webpack-plugin": "^2.9.0",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1",
    "webpack-md5-hash": "0.0.5"
  },
  "dependencies": {
    "angular": "^1.5.0"
  }
}
